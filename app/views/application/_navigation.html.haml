%nav.navbar.navbar-default{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{type: "button", "data-toggle" => "collapse", "data-target" => "#bs-example-navbar-collapse-1"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "#"} 
        = t(:site_brand)

    .collapse.navbar-collapse{id: "bs-example-navbar-collapse-1"}
      %ul.nav.navbar-nav
        // Let's put the first two entries outside the dropdown
        - @navbar_entries[0..1].each do |entry|
          %li
            = link_to t(entry[:title]), entry[:url]

        // And then the rest in the dropdown
        - if !@navbar_entries[2].nil?
          %li.dropdown 
            %a.dropdown-toggle{href: "#", "data-toggle" => "dropdown"} 
              More Options
              %b.caret
            %ul.dropdown-menu
              - @navbar_entries[2..-1].each do |entry|
                %li
                  = link_to t(entry[:title]), entry[:url]
        %li.dropdown
          %a.dropdown-toggle{href: "#", "data-toggle" => "dropdown"} 
            New Form
            // Add a glyphicon for a down arrow here.
          %ul.dropdown-menu
            - @dropdown_forms.each do |form|
              %li
                = link_to form.form_name, new_form_entry_path(name: form.form_name)

      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li
            = link_to 'Your Profile', '/profile'
          %li
            = link_to 'Sign Out', destroy_user_session_path, :method => :delete
        - else
          %li
            = link_to 'Sign In', new_user_session_path



